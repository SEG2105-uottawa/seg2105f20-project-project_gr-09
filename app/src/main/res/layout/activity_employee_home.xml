<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EmployeeHomeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/logged_in"
                    android:layout_width="293dp"
                    android:layout_height="match_parent" android:id="@+id/employee_loggedInTextVIew"
                    android:textSize="24sp"
                    android:textStyle="bold" android:layout_gravity="left" android:gravity="center_vertical"
                    android:layout_weight="1"/>
            <Button
                    android:text="@string/action_logout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/btn_employee_logout"
                    android:layout_gravity="right"
                    android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/usernameKey"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content" android:id="@+id/employee_usernameTextView"
                    android:layout_weight="1"
                    android:textSize="18sp" android:textStyle="bold"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/employee_viewUsernameTextView"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/roleKey"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content" android:id="@+id/employee_roleTextView"
                    android:layout_weight="1"
                    android:textSize="18sp" android:textStyle="bold"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/employee_viewRoleTextView"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/employee_viewBranchAddress"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/employee_viewBranchPhoneNumber"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/employee_viewBranchWorkingHours"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/employee_title_manageBranchServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/employee_title_manageBranchServices"
                    android:textSize="18sp" android:textColor="#000000" android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/employee_recyclerView_listBranchServices"/>
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/employee_title_manageServiceRequests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/employee_title_viewServiceRequests"
                    android:textStyle="bold" android:textSize="18sp" android:textColor="#000000"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/employee_recyclerView_listServiceRequests"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>