<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:padding="10dp">
    <TextView
            android:text="@string/customer_createRequest_title_requiredInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createServiceRequest_customerInfoTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="14sp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/createServiceRequest_customerInfoRecyclerView"
            android:layout_below="@id/createServiceRequest_customerInfoTitle"
    >
    </androidx.recyclerview.widget.RecyclerView>
    <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/createServiceRequest_customerInfoRecyclerView" android:id="@+id/space1"/>
    <TextView
            android:text="@string/customer_createRequest_title_requiredDocs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createServiceRequest_documentsTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="14sp"
            android:layout_below="@id/space1"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@id/createServiceRequest_documentsTitle"
            android:id="@+id/createServiceRequest_documentsRecyclerView"/>
</RelativeLayout>